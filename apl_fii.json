{
    "type": "APL",
    "version": "2024.3",
    "description": "Documento APL de Apresentação do Fundo Imobiliário XPML11.",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.7.0"
        }
    ],
    "mainTemplate": {
        "parameters": [
            "dados_update"
        ],
        "items": [
            {
                "type": "Container",
                "height": "100vh",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "${dados_update.background_image}",
                        "backgroundScale": "best-fill"
                    },
                    {
                        "type": "Container",
                        "height": "100vh",
                        "width": "100vw",
                        "items": [
                            {
                                "type": "Container",
                                "height": "160dp",
                                "width": "100vw",
                                "items": [
                                    {
                                        "type": "Frame",
                                        "width": "100vw",
                                        "height": "160dp",
                                        "background": {
                                            "type": "linear",
                                            "colorRange": [
                                                "rgba(0,0,0,0.4)",
                                                "rgba(0,0,0,0.1)"
                                            ],
                                            "inputRange": [
                                                0,
                                                1
                                            ],
                                            "angle": 0
                                        },
                                        "position": "absolute"
                                    },
                                    {
                                        "type": "Container",
                                        "direction": "row",
                                        "alignItems": "center",
                                        "width": "100vw",
                                        "height": "160dp",
                                        "paddingTop": "20dp",
                                        "paddingLeft": "40dp",
                                        "paddingRight": "20dp",
                                        "paddingBottom": "20dp",
                                        "items": [
                                            {
                                                "type": "Image",
                                                "source": "${dados_update.logo_url_atv}",
                                                "width": "120dp",
                                                "height": "110dp",
                                                "scale": "best-fill",
                                                "borderRadius": "20dp"
                                            },
                                            {
                                                "type": "Container",
                                                "paddingLeft": "25dp",
                                                "grow": 1,
                                                "items": [
                                                    {
                                                        "type": "Text",
                                                        "text": "ATUALIZAÇÕES FINANCEIRAS - FUNDOS E AÇÕES",
                                                        "fontSize": "36dp",
                                                        "fontWeight": "bold",
                                                        "color": "white"
                                                    },
                                                    {
                                                        "type": "Text",
                                                        "text": "${dados_update.variac_ativo}",
                                                        "fontSize": "30dp",
                                                        "color": "#cccccc"
                                                    },
                                                    {
                                                        "type": "Text",
                                                        "text": "by Cleber Gobira",
                                                        "fontSize": "18dp",
                                                        "color": "#aaaaaa"
                                                    }
                                                ]
                                            },
                                            {
                                                "type": "Image",
                                                "source": "https://lh5.googleusercontent.com/d/1-_HOuqzwJ9zqwUCnpuZHy9e90vUfKlHY",
                                                "width": "60dp",
                                                "height": "60dp",
                                                "scale": "best-fill",
                                                "borderRadius": "0",
                                                "alignSelf": "start"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "Frame",
                                        "height": "2dp",
                                        "width": "100vw",
                                        "background": {
                                            "type": "linear",
                                            "angle": 90,
                                            "colorRange": [
                                                "rgba(135,215,180,0.01)",
                                                "rgb(0,185,85)",
                                                "rgb(0,125,185)",
                                                "rgba(205,0,255,0.8)",
                                                "rgba(255,150,0,0.8)",
                                                "rgba(135,215,180,0.01)"
                                            ]
                                        },
                                        "position": "absolute",
                                        "bottom": 0
                                    }
                                ]
                            },
                            {
                                "scrollDirection": "vertical",
                                "childWidths": [
                                    "720dp",
                                    "530dp"
                                ],
                                "childWidth": [
                                    "720dp",
                                    "530dp"
                                ],
                                "type": "GridSequence",
                                "childHeight": "100%",
                                "height": "100vh",
                                "width": "100vw",
                                "paddingTop": "5dp",
                                "paddingLeft": "15dp",
                                "paddingRight": "10dp",
                                "paddingBottom": "20dp",
                                "items": [
                                    {
                                        "type": "TouchWrapper",
                                        "onPress": [
                                            {
                                                "type": "SendEvent",
                                                "arguments": [
                                                    "touch"
                                                ]
                                            }
                                        ],
                                        "items": [
                                            {
                                                "type": "Container",
                                                "width": "720dp",
                                                "paddingTop": "8dp",
                                                "paddingLeft": "0dp",
                                                "paddingRight": "0dp",
                                                "paddingBottom": "0dp",
                                                "items": [
                                                    {
                                                        "type": "Text",
                                                        "text": "${dados_update.card_ativo}",
                                                        "fontSize": "46dp",
                                                        "textAlign": "left",
                                                        "height": "430dp",
                                                        "paddingRight": "20dp",
                                                        "style": "textStyleDisplay4",
                                                        "id": "financeCard"
                                                    },
                                                    {
                                                        "type": "Frame",
                                                        "width": "100%",
                                                        "height": "2dp",
                                                        "background": {
                                                            "type": "linear",
                                                            "angle": 90,
                                                            "colorRange": [
                                                                "rgba(175,205,215,1)",
                                                                "white",
                                                                "rgba(175,205,215,0.08)"
                                                            ]
                                                        }
                                                    },
                                                    {
                                                        "type": "Container",
                                                        "height": "150dp",
                                                        "paddingTop": "0dp",
                                                        "paddingLeft": "0dp",
                                                        "paddingRight": "0dp",
                                                        "paddingBottom": "0dp",
                                                        "items": [
                                                            {
                                                                "text": "ALERTA:",
                                                                "fontSize": "36dp",
                                                                "type": "Text",
                                                                "paddingTop": "15dp",
                                                                "paddingBottom": "12dp"
                                                            },
                                                            {
                                                                "text": "${dados_update.hist_alert}",
                                                                "fontSize": "29dp",
                                                                "type": "Text",
                                                                "height": "320dp",
                                                                "paddingBottom": "12dp",
                                                                "id": "financeAlert"
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "type": "Container",
                                        "width": "100vw",
                                        "items": [
                                            {
                                                "type": "Container",
                                                "paddingTop": "8dp",
                                                "item": [
                                                    {
                                                        "type": "Image",
                                                        "source": "${dados_update.url_grafico}",
                                                        "width": "530",
                                                        "height": "397.5",
                                                        "scale": "best-fill",
                                                        "alignSelf": "start",
                                                        "borderRadius": "15dp"
                                                    }
                                                ]
                                            },
                                            {
                                                "type": "Text",
                                                "text": "Histórico",
                                                "fontSize": "28dp",
                                                "fontWeight": "bold",
                                                "textAlign": "center",
                                                "paddingBottom": "2dp",
                                                "paddingTop": "8dp"
                                            },
                                            {
                                                "type": "ScrollView",
                                                "height": "160",
                                                "item": [
                                                    {
                                                        "type": "Container",
                                                        "direction": "row",
                                                        "alignItems": "center",
                                                        "items": [
                                                            {
                                                                "type": "Sequence",
                                                                "width": "48.5%",
                                                                "height": "160dp",
                                                                "data": "${dados_update.hist_text_ativo_col1}",
                                                                "items": [
                                                                    {
                                                                    "type": "Text",
                                                                    "text": "${data}",
                                                                    "fontSize": "20dp",
                                                                    "textAlign": "center",
                                                                    "style": "textStyleDisplay4"
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "type": "Sequence",
                                                                "width": "3%",
                                                                "height": "100%",
                                                                "spacing": 10,
                                                                "items": [
                                                                    {
                                                                        "type": "Frame",
                                                                        "width": "2dp",
                                                                        "height": "100%",
                                                                        "background": {
                                                                            "type": "linear",
                                                                            "colorRange": [
                                                                                "rgba(175,205,215,0.01)",
                                                                                "white",
                                                                                "rgba(175,205,215,0.01)"
                                                                            ]
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "type": "Sequence",
                                                                "width": "48.5%",
                                                                "height": "160dp",
                                                                "data": "${dados_update.hist_text_ativo_col2}",
                                                                "items": [
                                                                    {
                                                                    "type": "Text",
                                                                    "text": "${data}",
                                                                    "fontSize": "20dp",
                                                                    "textAlign": "center",
                                                                    "style": "textStyleDisplay4"
                                                                    }                                                                    
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "layouts": {}
}