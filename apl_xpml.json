{
  "type": "APL",
  "version": "2024.3",
  "description": "A hello world APL document with background image.",
  "theme": "dark",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.7.0"
    }
  ],
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "Container",
        "height": "100vh",
        "items": [
          {
            "type": "AlexaBackground",
            "backgroundImageSource": "https://lh5.googleusercontent.com/d/1-A_3cMBv-0E1o4RAzMjf8j31q2IKj3e5",
            "backgroundScale": "best-fill"
          },
          {
            "type": "Container",
            "height": "100vh",
            "width": "100vw",
            "items": [
              {
                "type": "AlexaHeader",
                "headerTitle": "Atualizações Fundos Imobiliários - FIIs",
                "headerSubtitle": "Houve queda de 0,5% no valor do fundo XPML11",
                "headerDivider": true,
                "headerAttributionImage": "https://lh5.googleusercontent.com/d/1-_HOuqzwJ9zqwUCnpuZHy9e90vUfKlHY",
                "headerAttributionText": "by Cleber Gobira",
                "headerBackgroundColor": "rgba(0, 0, 0, 0.5)",
                "headerAttributionOpacity": 0.7,
                "headerBackButton": true,
                "headerBackButtonCommand": {
                  "type":"SendEvent",
                  "arguments":["goBack"]
                },
                "paddingTop": "@spacingSmall"
              },
              {
                "scrollDirection": "vertical",
                "childWidths": [
                    "865dp",
                    "315dp"
                ],
                "childWidth": [
                    "865dp",
                    "315dp"
                ],
                "type": "GridSequence",
                "childHeight": "100%",
                "height": "100vh",
                "width": "100vw",
                "padding": "50dp",
                "items": [
                  {
                    "type": "Text",
                    "text": "Atualizações do Fundo XPML11",
                    "fontSize": "52dp",
                    "textAlign": "left",
                    "paddingRight": "20dp",
                    "style": "textStyleDisplay4",
                    "speech": "${payload.longTextTemplateData.properties.plantInfoSpeech}",
                    "id": "financeContent1"
                  },
                  {
                    "type": "Container",
                    "width": "100%",
                    "items": [
                      {
                      "type": "Text",
                      "text": "Histórico",
                      "fontSize": "28dp",
                      "fontWeight": "bold",
                      "textAlign": "center",
                      "paddingBottom": "10dp"
                      },
                      {
                      "type": "Text",
                      "text": "05/01/2024:\u2003 R$\u2009 96,45<br>05/01/2024:\u2003 R$\u2009 98,73",
                      "fontSize": "24dp",
                      "textAlign": "right",
                      "style": "textStyleDisplay4",
                      "speech": "${payload.longTextTemplateData.properties.plantInfoSpeech}",
                      "id": "financeContent2"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}