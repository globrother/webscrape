{
  "type": "APL",
  "version": "2024.3",
  "description": "Documento APL para adicionar novo ativo",
  "theme": "dark",
  "mainTemplate": {
    "parameters": ["payload"],
    "items": [
      {
        "type": "Container",
        "items": [
          {
            "type": "Text",
            "text": "Digite a sigla do novo fundo:",
            "style": "textStylePrimary1"
          },
          {
            "type": "EditText",
            "id": "fundoInput",
            "hintText": "Ex: mxrf11",
            "submitKeyType": "next",
            "onSubmit": [
              {
                "type": "SendEvent",
                "arguments": [
                  "siglaAtivo",
                  "${event.source.value}"
                ]
              }
            ]
          },
          {
            "type": "Text",
            "text": "Digite o nome completo do fundo:",
            "style": "textStylePrimary1"
          },
          {
            "type": "EditText",
            "id": "nomeInput",
            "hintText": "Ex: Maxi Renda",
            "submitKeyType": "done",
            "onSubmit": [
              {
                "type": "SendEvent",
                "arguments": [
                  "nomeAtivo",
                  "${event.source.value}"
                ]
              }
            ]
          },
          {
            "type": "TouchWrapper",
            "item": {
              "type": "Text",
              "text": "Cadastrar",
              "style": "textStylePrimary1",
              "backgroundColor": "#3B82F6",
              "color": "white",
              "paddingLeft": 20,
              "paddingRight": 20,
              "paddingTop": 10,
              "paddingBottom": 10,
              "borderRadius": 8,
              "textAlign": "center"
            },
            "onPress": [
              {
                "type": "SendEvent",
                "arguments": [
                  "confirmarCadastro"
                ]
              }
            ],
            "spacing": 20
          }
        ],
        "paddingLeft": 40,
        "paddingRight": 40,
        "paddingTop": 40,
        "paddingBottom": 40,
        "alignItems": "center"
      }
    ]
  }
}