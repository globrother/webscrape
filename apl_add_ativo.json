{
    "type": "APL",
    "version": "2024.3",
    "description": "Documento APL para adicionar novo ativo",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.7.0"
        },
        {
            "name": "alexa-styles",
            "version": "1.6.0"
        }
    ],
    "mainTemplate": {
        "parameters": [
            "payload",
            {
            "name": "cadastrando",
            "default": false
            }
        ],
        "items": [
            {
                "type": "Container",
                "height": "100%",
                "width": "100%",
                "alignItems": "stretch",
                "padding": [
                    "@marginHorizontal",
                    "@spacing3XLarge"
                ],
                "bind": [
                    {
                        "name": "FinalInput",
                        "value": ""
                    }
                ],
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "https://lh5.googleusercontent.com/d/1-A_3cMBv-0E1o4RAzMjf8j31q2IKj3e5",
                        "backgroundScale": "best-fill"
                    },
                    {
                        "type": "Text",
                        "text": "Entrada de Dados do Ativo",
                        "fontSize": "50dp",
                        "textAlign": "center",
                        "style": "textStylePrimary1"
                    },
                    {
                        "type": "Text",
                        "text": "Digite a sigla completa do novo ativo:",
                        "fontSize": "30dp",
                        "textAlign": "left",
                        "spacing": "@spacing3XLarge",
                        "style": "textStylePrimary1"
                    },
                    {
                        "type": "Frame",
                        "height": "65",
                        "borderColor": "#3B82F6",
                        "borderWidth": 2,
                        "borderRadius": 15,
                        "paddingLeft": 15,
                        "paddingTop": 12,
                        "spacing": 10,
                        "items": [
                            {
                                "type": "EditText",
                                "id": "fundoInput",
                                "hint": "Ex: mxrf11",
                                "hintColor": "#547c8e",
                                "hintWeight": "100",
                                "fontSize": "35dp",
                                "submitKeyType": "next",
                                "onSubmit": [
                                    {
                                        "type": "SendEvent",
                                        "arguments": [
                                            "siglaAtivo",
                                            "${event.source.value}"
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Text",
                        "text": "Digite o nome completo do ativo:",
                        "fontSize": "30dp",
                        "spacing": "@spacingMedium",
                        "style": "textStylePrimary1"
                    },
                    {
                        "type": "Frame",
                        "height": "65",
                        "borderColor": "#3B82F6",
                        "borderWidth": 2,
                        "borderRadius": 15,
                        "paddingLeft": 15,
                        "paddingTop": 12,
                        "spacing": 10,
                        "items": [
                            {
                                "type": "EditText",
                                "id": "nomeInput",
                                "hint": "Ex: Maxi Renda",
                                "hintColor": "#547c8e",
                                "hintWeight": "100",
                                "fontSize": "35dp",
                                "submitKeyType": "done",
                                "onSubmit": [
                                    {
                                        "type": "SendEvent",
                                        "arguments": [
                                            "nomeAtivo",
                                            "${event.source.value}"
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "height": "100",
                        "width": "400",
                        "borderColor": "#3B82F6",
                        "borderWidth": 2,
                        "borderRadius": 25,
                        "spacing": "@spacing3XLarge",
                        "background": "#3B82F6",
                        "alignSelf": "center",
                        "items": [
                            {
                                "type": "TouchWrapper",
                                "disabled": "${cadastrando}",
                                "onPress": [
                                    {
                                        "type": "SendEvent",
                                        "arguments": [
                                            "confirmarCadastro"
                                        ]
                                    }
                                ],
                                "item": {
                                    "type": "Text",
                                    "fontSize": "50dp",
                                    "text": "Cadastrar",
                                    "color": "white",
                                    "paddingLeft": 85,
                                    "paddingRight": 20,
                                    "paddingTop": 15,
                                    "paddingBottom": 10
                                }
                            }
                        ]
                    }
                ],
                "paddingLeft": 40,
                "paddingRight": 40,
                "paddingTop": 40,
                "paddingBottom": 40
            }
        ]
    }
}